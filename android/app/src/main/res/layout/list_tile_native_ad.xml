<com.google.android.gms.ads.nativead.NativeAdView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/linear_rounded">

    <LinearLayout
   android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="0dp">


            <ImageView
                android:id="@+id/ad_app_icon"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:adjustViewBounds="true"
                android:contentDescription="Ad Icon" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp">


                <TextView
                    android:id="@+id/ad_headline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_marginStart="8dp"
                    android:textColor="#000000"
                    android:layout_toEndOf="@+id/ad_notification_view"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/ad_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ad_headline"
                    android:text="This is the ad description where details are mentioned"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:maxLines="2" />


                <TextView
                    android:id="@+id/ad_notification_view"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:background="@drawable/gnt_rounded_corners_shape"
                    android:text="Ad"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:gravity="center" />


            </RelativeLayout>

        </LinearLayout>

        <!-- MediaView -->
        <com.google.android.gms.ads.nativead.MediaView
            android:id="@+id/ad_media"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:paddingBottom="0dp" />

        <!-- Call-to-Action Button -->
        <Button
            android:id="@+id/ad_call_to_action"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:paddingVertical="0dp"
            android:background="@drawable/rounded_button_shape"
            android:text="Install"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center" />

       

    </LinearLayout>


</com.google.android.gms.ads.nativead.NativeAdView>